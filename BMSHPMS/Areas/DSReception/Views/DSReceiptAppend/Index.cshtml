@model BMSHPMS.DSReception.ViewModels.DSReceiptAppendVMs.DSReceiptAppendVM
@{
    var dServiceList = Model.GetDharmaServiceList();
    string appendUrl = "/dsreception/dsreceiptappend/append";
}

<div style="padding:20px;">
    @foreach (var item in dServiceList)
    {
        <div style="margin-bottom:20px;">
            <wt:linkbutton text="@item.ServiceName" url="@appendUrl/@item.ID" target="ButtonTargetEnum.Layer" theme="ButtonThemeEnum.Normal" window-title="收據功德補加" window-height="500" window-width="800" />
        </div>
    }
</div>