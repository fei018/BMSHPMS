@model BMSHPMS.DSReception.ViewModels.PrintSerialVM

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>列印</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/layui/css/layui.css" media="all">
    @* <link rel="stylesheet" href="/sitecss/wtm.css"> *@
   @*  <link rel="stylesheet" href="/font/iconfont.css"> *@
    @* <link rel="shortcut icon" href="/favicon.ico" /> *@
    @* <link href="/sitecss/reception.css" rel="stylesheet" /> *@
</head>

<body>
    <style>
        @@media print {
            @@page {
                margin:0;
            }
        }
        body{
            margin:1cm;
        }
        .print-receipt{
            margin-bottom:20px;
        }
        .print-receipt-item {
            margin:10px;
        }
        .print-list{
            -moz-column-count: 3; /* Firefox */
            -webkit-column-count: 3; /* Safari and Chrome */
            column-count: 3;
        }
    </style>
    <div>
        <div class="print-receipt">
            <span class="print-receipt-item">@Model.Receipt?.ReceiptNumber</span>
            <span class="print-receipt-item">@Model.Receipt?.DharmaServiceName</span>
            <span class="print-receipt-item">@Model.Receipt?.ReceiptDate.Value.ToString("yyyy-MM-dd")</span>
        </div>

        <div class="print-list">
            @if (Model.Donors.Count > 0)
            {
                <div >
                    @foreach (var item in Model.Donors)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
            @if (Model.Longevitys.Count > 0)
            {
                <div >
                    @foreach (var item in Model.Longevitys)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
            @if (Model.Memorials.Count > 0)
            {
                <div>
                    @foreach (var item in Model.Memorials)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
        </div>
       @*  <div class="layui-row layui-col-space15">
            @if (Model.Donors.Count > 0)
            {
                <div class="layui-col-md4">
                    @foreach (var item in Model.Donors)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
            @if (Model.Longevitys.Count > 0)
            {
                <div class="layui-col-md4">
                    @foreach (var item in Model.Longevitys)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
            @if (Model.Memorials.Count > 0)
            {
                <div class="layui-col-md4">
                    @foreach (var item in Model.Memorials)
                    {
                        <p>@item.SerialCode</p>
                    }
                </div>
            }
        </div> *@
    </div>

    <script>
        window.onload = function () {
            window.print();
        };

        window.onafterprint = function () {
            window.close();
        };
    </script>
</body>

</html>
