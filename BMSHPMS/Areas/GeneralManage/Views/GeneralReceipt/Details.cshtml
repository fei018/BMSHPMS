@model BMSHPMS.GeneralManage.ViewModels.GeneralReceiptVMs.GeneralReceiptVM
@{
    var donorList = Model.Entity.DonorList;
}

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Three">
        <wt:display field="Entity.ReceiptNumber" />
        <wt:display field="Entity.ReceiptDate" />
        <wt:display field="Entity.DonationCategory" />
        <wt:display field="Entity.ContactName" />
        <wt:display field="Entity.Phone" />
    </wt:row>
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:display field="Entity.GeneralRemark" />
    </wt:row>
    @if (donorList.Count > 0)
    {
        <hr />
        @foreach (var item in donorList)
        {
            <wt:row items-per-row="ItemsPerRowEnum.Six">
                <wt:display field="@item.Name" />
                <wt:display field="@item.Sum" />
                <wt:display field="@item.CustomCol1" />
                <wt:display field="@item.CustomCol2" />
                <wt:display field="@item.CustomCol3" />
                <wt:display field="@item.GeneralRemark" />
            </wt:row>
            <hr />
        }
    }
    <wt:row align="AlignEnum.Right">
        <wt:closebutton />
    </wt:row>
</wt:form>
