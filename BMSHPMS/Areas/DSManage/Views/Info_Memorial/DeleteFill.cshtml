@model BMSHPMS.DSManage.ViewModels.Info_MemorialVMs.Info_MemorialVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:display field="Entity.SerialCode" />    
        <wt:display field="Entity.Sum" />
        <wt:display field="Entity.DeceasedName_1" />
        <wt:display field="Entity.DeceasedName_2" />
        <wt:display field="Entity.DeceasedName_3" />
        <wt:display field="Entity.BenefactorName" />      
        <wt:display field="Entity.DSRemark" />
    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]" />
        <wt:closebutton />
    </wt:row>
</wt:form>
